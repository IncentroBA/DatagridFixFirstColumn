        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Datagrid Fixed Column</name>
    <description>Scrollable datagrid with first column fixed</description>
    <icon/>
    <properties>
        <propertyGroup caption="General">
            <property key="className" type="string" required="false">
                <caption>classname</caption>
                <description>Listen to this class to apply the widget to.</description>
